generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  userID      String  @id @unique @default(cuid()) @map("id")
  email       String  @unique
  name        String?
  userName    String  @unique @map("username")
  password    String  @unique
  phoneNumber Int     @map("phone_number")
  role        Role    @unique
  imageURL    String? @map("image_url") @default("LeaderF.png")

  // relations 
  events      Event[] @relation("UserEvents")
  messages Conversation[] @relation("UserMessages")
  groups GroupMember[] @relation("UserGroups")

  @@map("user_table")
}

model Event {
  eventID        String   @id @default(cuid()) @map("event_id")
  title          String
  description    String
  category       String
  imageURL       String?  @map("image_url")
  startDateTime  DateTime @map("start_date_time")
  endDateTime    DateTime? @map("end_date_time")
  eventLocation  String?  @map("event_location")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  userId         String
  user           User     @relation("UserEvents", fields: [userId], references: [userID])

  @@map("event_table")
}


// Table model for the messages named Converstions
model Conversation {
  messageId String @id @default(cuid()) @map("message_id")
  messageType ConvoType @map("message_type")
  msgStatus MessageStatus @map("message_status")
  content String 
  userId String
  createdAt DateTime @default(now()) @map("created_at")
  receiverId String?  
  groupId String? 
  replyToId String? @map("reply_to_id")
  deletedFor String[] @default([]) @map("deleted_for") // Array of userIDs who deleted this message
  
  // Self-relation for replies
  replyTo Conversation? @relation("MessageReplies", fields: [replyToId], references: [messageId])
  replies Conversation[] @relation("MessageReplies")
  
  // one to many relationship between user and messages 
  convoUser User @relation("UserMessages", fields: [userId], references: [userID])

  @@map("conversation_table")
}

model Group {
  groupId String @id @default(cuid()) @map("group_id")
  groupName String @map("group_name") @unique
  groupMembers GroupMember[] 
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@map("group_table")
}

model GroupMember {
  id      String @id @default(cuid())
  userId  String
  groupId String
  role    GroupRole @default(member)  // admin, member, moderator

  user  User  @relation("UserGroups", fields: [userId], references: [userID])
  group Group @relation(fields: [groupId], references: [groupId])

  @@unique([userId, groupId])
}

// single row table for storing all data of the church in json (for optimal querying)
model churchData {
  id String @id @default(cuid())
  // Data about the church to be stored (1 column per data)
  libraryBooks Json @map("library_books")
  singingGroups Json @map("singing_groups")
  bibleStudy Json @map("bible_study")
  eventsCalendar Json @map("calendar_of_events")
  merchandise Json
  lessonStudy Json @map("lesson_study")

  @@map("church_data")
}

enum ConvoType {
  community @map("COMMUNITY")
  group @map("GROUP")
  direct @map("DIRECT")
  visitor @map("VISITOR")
}

enum GroupRole {
  admin @map("ADMIN")
  member @map("MEMBER")
}

enum MessageStatus {
  sent @map("SENT")
  delivered @map("DELIVERED")
  read @map("READ")
}

enum Role {
  user           @map("USER")
  admin1         @map("ADMIN1")
  admin2         @map("ADMIN2")
  pastor         @map("PASTOR")
  elder1         @map("ELDER1")
  elder2         @map("ELDER2")
  elder3         @map("ELDER3")
  churchLeader   @map("CHURCHLEADER")
  headDeacon     @map("HEADDEACON")
  headDeaconness @map("HEADDEACONNESS")
  sabbathSchool  @map("SABBATHSCHOOL")
  treasurer      @map("TREASURER")
  clerk          @map("CLERK")
  alo            @map("ALO")
  amo            @map("AMO")
  prophecy       @map("PROPHECY")
  stewardship    @map("STEWARDSHIP")
  music          @map("MUSIC")
  welfare        @map("WELFARE")
  development    @map("DEVELOPMENT")
  communication  @map("COMMUNICATION")
  personalMinistry @map("personal_ministry")
}
