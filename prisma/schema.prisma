generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  user @map("USER")
  admin1 @map("ADMIN1")
  admin2 @map("ADMIN2")
  elder1 @map("ELDER1")
  elder2 @map("ELDER2")
  elder3 @map("ELDER3")
  churchLeader @map("CHURCHLEADER")
  headDeacon @map("HEADDEACON")
  headDeaconness @map("HEADDEACONNESS")
  sabbathSchool @map("SABBATHSCHOOL")
  treasurer @map("TREASURER")
  clerk @map("CLERK")
  alo @map("ALO")
  amo @map("AMO")
  prophecy @map("PROPHECY")
  stewardship @map("STEWARDSHIP")
  music @map("MUSIC")
  welfare @map("WELFARE")
  development @map("DEVELOPMENT")
  communication @map("COMMUNICATION")
}

model User{
  userID String @id @unique @default(uuid()) @map("id")// @id means primary key, @unique means the value must be unique, @default(val) sets a default value 'val' uuid() generates a random unique value
  role Role @unique
  email String @unique 
  phoneNumber Int @map("phone_number")
  userName String @unique @map("username")
  password String @unique 

  // a user can create many events 
  events Event[] @relation("UserEvents")

  @@map("user_table")
}

model Event{
  eventID String @id @default(uuid()) @map("event_id")
  title String 
  description String
  imageURL String @map("image_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  eventStartDate DateTime @map("event_start_date")
  eventEndDate DateTime @map("event_end_date")

  // each event must have a foreign key of its creator
  userId String
  user User @relation("UserEvents", fields: [userId], references: [userID])

  @@map("event_table")
}